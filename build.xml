<?xml version="1.0" encoding="UTF-8" ?>
<project name="oclib-parent" default="dist" basedir=".">

	<!-- For more information about this file, see http://ant.apache.org -->

	<property name="child.directory" value="de.tudresden.inf.tcs.oclib" />


	<!-- Runs the tests. -->
	<target name="test">
		<subant antfile="${child.directory}/build.xml" buildpath="." target="test" />
	</target>

	<!-- Cleans compiled files. -->
	<target name="clean">
		<subant antfile="${child.directory}/build.xml" buildpath="." target="clean" />
	</target>

	<!-- Compiles this module. -->
	<target name="dist">
		<subant antfile="${child.directory}/build.xml" buildpath="." />
	</target>

</project>

